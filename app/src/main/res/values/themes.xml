<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ThePremiumHomesLtd"
        parent="Theme.Material3.DayNight.NoActionBar">

        <!-- App colors -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorSurface">@color/primaryDark</item>

        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="Theme.ThePremiumHomesLtd.Splash"
        parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    // Source - https://stackoverflow.com/a
    // Posted by Gabriele Mariotti
    // Retrieved 2025-12-20, License - CC BY-SA 4.0

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="NavigationMenuItemStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>