<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    android:background="@color/primaryDark">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layoutMain"
        android:visibility="visible"
        >

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <!-- Search Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_search_24"
                    android:contentDescription="Search Icon"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    app:tint="@color/gray_500" />

                <!-- Search EditText -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:hint="Search for properties, locations..."
                    android:textSize="14sp"
                    android:background="@null"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:inputType="text" />

                <!-- Optional: Filter/Clear Button -->
                <ImageButton
                    android:id="@+id/clearSearchButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:tint="@color/gray_500"
                    android:src="@drawable/outline_close_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Clear Search"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:visibility="visible" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Image Slider Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="20"
                app:iss_delay="2000"
                app:iss_period="2000"
                app:iss_title_background="@color/transparent" >
            </com.denzcoskun.imageslider.ImageSlider>
        </androidx.cardview.widget.CardView>

        <TextView
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR DREAM HOME AWAITS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:text="The Premium Homes Ltd. is a visionary real estate company dedicated to creating modern, community-focused living spaces. With a commitment to affordability, transparency, and smart innovation, we design homes where families feel secure, connected, and proud to belong."
            android:textColor="@color/gray_100"
            android:textStyle="italic|bold"
            android:fontFamily="casual"
            />

        <!-- GreenView Background-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/primaryDark">

            <!-- Auto Scrolling Horizontal Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Left to Right Auto Scroll -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRightToLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <!-- Right to Left Auto Scroll -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeftToRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <!-- On sale Projects Button -->
                <TextView
                    android:id="@+id/projectsView"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="See All"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_outline_white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- WhiteView Background-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp">

                <!-- Projects by Community Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/projectsByCommunitySection"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:text="Projects by Community"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="2dp"
                            android:background="@drawable/bg_gradient_button"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tabs -->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/communityTab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/allCommunity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="5dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  All  "
                                android:textColor="@color/primaryDark"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/premiumSmartCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The Premium Smart City"
                                android:textColor="@color/primaryDark"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ashuliaModel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ashulia Model Town"
                                android:textColor="@color/primaryDark"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/premiumRoyalCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The Premium Royal City"
                                android:textColor="@color/primaryDark"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bashundharaRA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bashundhara Residential Area"
                                android:textColor="@color/primaryDark"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Project Lists -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/projectLists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:text="FIND WHERE YOU WANT TO LIVE"
                    android:gravity="center"
                    android:textColor="@color/primaryDark"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:textSize="13sp"
                    android:text="Premium's vast range of developments are ongoing. your home is a place that enlivens you. With all that Dhaka has to offer, choose a community that fits your lifestyle."
                    android:textColor="@color/hint"
                    android:gravity="center"
                    android:textStyle="normal"/>

                <!-- Featured Properties -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:text="Featured Properties"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="2dp"
                            android:background="@drawable/bg_gradient_button"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/seeAll"
                        android:background="@drawable/bg_gradient_button"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:text="View All"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint"
                    android:text="Find the place you want to live in"
                    android:paddingRight="20dp"
                    android:textSize="13sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="left"
                    android:textStyle="normal"/>

                <!-- Featured Projects List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/featuredProjectLists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    />
            </LinearLayout>

            <!-- Client Reviews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Reviews header and content... -->
                <!--Header-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:text="Client Reviews"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="2dp"
                            android:background="@drawable/bg_gradient_button"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/viewReviews"
                        android:background="@drawable/bg_gradient_button"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:text="View All"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="Hear from our satisfied clients about their experiences with us. Your trust is our greatest achievement."
                    android:textColor="@color/hint"
                    android:textSize="13sp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewLists"
                    android:paddingTop="2dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    />

            </LinearLayout>

            <!-- Statistics Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_margin="10dp"
                android:columnWidth="90dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <!-- Happy Clients -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#F1FBFF">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#2962FF"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:src="@drawable/ic_clients"
                                app:tint="@color/white"/>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +"
                                android:textSize="24sp"
                                android:textColor="@color/emerald_700"
                                android:textStyle="bold"/>
                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Happy Clients"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryText"
                            android:layout_marginTop="8px"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Average Rating -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FCFDEE">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@color/goldAccent"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/white"/>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" /5"
                                android:textSize="22sp"
                                android:textColor="@color/blueAccent"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average Rating"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryText"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Satisfaction Rate -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#EBFFEE">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@color/primaryDark1"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:src="@drawable/ic_check"
                                app:tint="@color/white"/>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" %"
                                android:textSize="22sp"
                                android:textColor="@color/emerald_700"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satisfaction Rate"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryText"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Ongoing Projects -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FCE6FF">

                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="#9C27B0"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="11dp"
                                android:src="@drawable/ic_project"
                                app:tint="@color/white"/>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textSize="22sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" +"
                                android:textSize="24sp"
                                android:textColor="@color/emerald_700"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing Projects"
                            android:textSize="14sp"
                            android:textColor="@color/secondaryText"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Live Progress -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:text="PROGRESS OF OUR PROJECTS"
                android:gravity="center"
                android:textColor="@color/emerald_700"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:text="Rest Assured, check everything in live to make yourself comfortable"
                android:textColor="@color/hint"
                android:gravity="center"
                android:textStyle="normal"/>

            <!-- Live Progress List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/liveProgressList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:paddingLeft="5dp"
                />

            <!-- Latest Blog Posts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:text="Latest Blog Posts"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_gradient_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="5dp"
                    android:text="Rest Assured, check everything in live to make yourself comfortable."
                    android:textColor="@color/hint"
                    android:textSize="12sp"/>

                <!-- Blog Posts List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/blogPostsLists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    />
            </LinearLayout>

            <!-- Contact Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="70dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp"
                    android:background="@drawable/bg_gradiant_dark_green">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginBottom="20dp"
                        android:text="Ready to Find Your \nDream Home?"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp"
                        android:text="Let our experienced team guide you through every step of your real estate journey."
                        android:textColor="@color/white"
                        android:textStyle="normal"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        android:layout_marginBottom="40dp"
                        >

                        <Button
                            android:id="@+id/contact"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="22dp"
                            android:paddingRight="22dp"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule a Consultation"
                            android:textColor="@color/primaryDark"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>