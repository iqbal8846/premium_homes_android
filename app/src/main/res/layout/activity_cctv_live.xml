<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1621">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#1B2A3A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="@android:color/white"/>

        <TextView
            android:layout_marginStart="12dp"
            android:text="Live Camera Monitoring"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Main WebView Container (for selected camera) -->
    <!-- Main WebView Container (for selected camera) - add this inside FrameLayout -->
    <FrameLayout
        android:id="@+id/mainPreviewContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@android:color/black"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4">

        <!-- WebView for main RTSP stream -->
        <WebView
            android:id="@+id/mainWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/mainLoadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <!-- Error message -->
        <TextView
            android:id="@+id/mainTvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Stream not available"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <!-- Info Button (shows when stream fails) -->
        <ImageView
            android:id="@+id/ivInfoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_profile32"
            android:tint="#4FC3F7"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@drawable/bg_info_button"/>

        <!-- LIVE badge -->
        <TextView
            android:id="@+id/mainTvLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="LIVE"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/bg_live_badge"
            android:layout_gravity="top|end" />

    </FrameLayout>

    <!-- Camera Info Section (above RecyclerView) -->
    <LinearLayout
        android:id="@+id/cameraInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/mainPreviewContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Property Name -->
        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Premium Green Valley"
            android:textColor="#4FC3F7"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Camera Name -->
        <TextView
            android:id="@+id/tvCameraName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Camera 1 - Main View"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Property 15 - Flat 1A/1B"
            android:textColor="#B0BEC5"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Section Title for Cameras -->
    <TextView
        android:id="@+id/tvOtherCameras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Other Cameras"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cameraInfoLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Horizontal RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cctvRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvOtherCameras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>