<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- ================= TOP HEADER ================= -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        >
        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@color/primaryDark"
            android:clickable="true"
            android:focusable="true">

            <!-- Back Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />

            <!-- Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Back To Dashboard"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="4dp"
            app:cardCornerRadius="14dp"
            android:layout_weight="1"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/camera1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_gradiant_dark_green"
                >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/white"
                    android:src="@drawable/video_live"/>

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera 1"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:cardCornerRadius="14dp"
            android:layout_weight="1"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/camera2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/video_live"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera 2"
                    android:paddingLeft="8dp"
                    android:textColor="@color/gray_500"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1B2A3A">

                    <!-- ================= CAMERA PREVIEW ================= -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/black">

                        <!-- Stream WebView -->
                        <WebView
                            android:id="@+id/webView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Loading -->
                        <ProgressBar
                            android:id="@+id/loadingIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <!-- Error -->
                        <TextView
                            android:id="@+id/tvError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Stream not available"
                            android:textColor="@android:color/white"
                            android:visibility="gone" />

                        <!-- LIVE Badge -->
                        <TextView
                            android:id="@+id/tvLive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_margin="8dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="LIVE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_live_badge" />
                    </FrameLayout>

                    <!-- ================= INFO SECTION ================= -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Property -->
                        <TextView
                            android:id="@+id/tvPropertyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Premium Garden View"
                            android:textColor="#4FC3F7"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <!-- Camera Name -->
                        <TextView
                            android:id="@+id/tvCameraName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Camera 1"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Location -->
                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Property 15 - Flat 1A/1B"
                            android:textColor="#B0BEC5"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F7FA">

                <!-- ================= Money Receipt ================= -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Icon -->
                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/money"
                                android:background="@drawable/bg_blue_circle"
                                app:tint="@color/white"
                                android:padding="10dp" />

                            <!-- Text -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Money Receipt"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#111827"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Download your official payment receipt and transaction history"
                                    android:textSize="13sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Button -->
                        <TextView
                            android:id="@+id/receiptid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginBottom="10dp"
                            android:text="View Receipt"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="8dp"
                            android:background="@drawable/bg_blue_button"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <!-- ================= Total Expenditure ================= -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/baseline_document_scanner_24"
                                android:background="@drawable/bg_gradiant_dark_green"
                                app:tint="@color/white"
                                android:padding="10dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Expenditure"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#111827"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View complete purchase agreement and property documents"
                                    android:textSize="13sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/totalExpenditure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="View Details"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="8dp"
                            android:background="@drawable/bg_gradiant_dark_green"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- ================= Handover Date ================= -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/ic_calender"
                            android:background="@drawable/bg_green_circle"
                            android:padding="10dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Handover Date"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Date: Dec, 2027"
                                android:textSize="13sp"
                                android:textColor="#6B7280"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>




            <com.google.android.material.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginBottom="12dp"/>

                    <!-- ===== Owner Name ===== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="1dp"
                            app:cardCornerRadius="10dp"
                            >
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_person"
                                android:padding="8dp"
                                android:tint="@color/gray_500"
                                android:background="@color/gray_300"/>
                        </androidx.cardview.widget.CardView>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Owner Name"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>

                            <TextView
                                android:id="@+id/text_owner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Md Sumon Ahmed"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ===== Phone Number ===== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="1dp"
                            app:cardCornerRadius="10dp"
                            >
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_call"
                                android:padding="8dp"
                                android:tint="@color/gray_500"
                                android:background="@color/gray_300"/>
                        </androidx.cardview.widget.CardView>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>

                            <TextView
                                android:id="@+id/text_owner_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="971566464287"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ===== Email ===== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="1dp"
                            app:cardCornerRadius="10dp"
                            >
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_email"
                                android:padding="8dp"
                                android:tint="@color/gray_500"
                                android:background="@color/gray_300"/>
                        </androidx.cardview.widget.CardView>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="12sp"
                                android:textColor="#6B7280"/>

                            <TextView
                                android:id="@+id/text_owner_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="tpgv1a@dpremiumhomes.com"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#111827"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





</LinearLayout>
