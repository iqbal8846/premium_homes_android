<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00FFFFFF">

    <!-- MAIN CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= HEADER ================= -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/emerald_700"
                android:paddingTop="28dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_search"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Advanced Search"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="#33FFFFFF"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/outline_close_24"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="12dp"
                    android:text="Search and filter projects based on specific criteria"
                    android:textColor="#E0F2F1"
                    android:textSize="14.5sp" />
            </LinearLayout>

            <!-- ================= SCROLL CONTENT ================= -->
            <ScrollView
                android:id="@+id/scrollContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Search Bar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <!-- Search Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_search"
                                android:contentDescription="Search Icon"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="8dp"
                                app:tint="@color/primaryDark" />

                            <!-- Search EditText -->
                            <EditText
                                android:id="@+id/searchEditText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_weight="1"
                                android:hint="Search for properties, locations..."
                                android:textSize="14sp"
                                android:background="@null"
                                android:maxLines="1"
                                android:imeOptions="actionSearch"
                                android:inputType="text" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Bathroom Section -->
                    <LinearLayout
                        android:id="@+id/section_bathroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_bathroom"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Bathroom"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tv_bathroom_count"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/circle_green"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_bathroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="12dp"
                        app:chipSpacingVertical="10dp" />

                    <!-- Flat Size Section -->
                    <LinearLayout
                        android:id="@+id/section_bed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_size"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Bed"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tv_bed_count"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/circle_green"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_bed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="12dp"
                        app:chipSpacingVertical="10dp" />

                    <!-- Flat Size Section -->
                    <LinearLayout
                        android:id="@+id/section_flat_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_bed"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Flat Size (SFT)"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tv_flat_size_count"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/circle_green"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_flat_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />

                    <!-- Balcony Section -->
                    <LinearLayout
                        android:id="@+id/section_balcony"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_balcony"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Balcony"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tv_balcony_count"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/circle_green"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_balcony"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="12dp"
                        app:chipSpacingVertical="10dp" />

                    <!-- Location Section -->
                    <LinearLayout
                        android:id="@+id/section_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_location"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Location"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tv_location_count"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@drawable/circle_green"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="12dp"
                        app:chipSpacingVertical="10dp" />

                </LinearLayout>
            </ScrollView>

            <!-- ================= FIXED BOTTOM BAR ================= -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#F9FAFB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_showing_count"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingVertical="12dp"
                            android:text="Showing 100 projects"
                            android:textColor="@color/gray_400"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tv_clear_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="12dp"
                            android:text="Clear All"
                            android:textColor="@color/red"
                            android:textSize="14.5sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">

                            <TextView
                                android:id="@+id/btn_apply"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Apply Filters"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:padding="10dp"
                                android:textColor="#FFFFFF"
                                android:background="@color/emerald_700"
                                android:stateListAnimator="@null" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>