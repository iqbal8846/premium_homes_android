<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Header - Fixed at top -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/primaryDark">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header / Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:letterSpacing="0.02"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View your account information"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="12dp" />

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Profile Header with Avatar - Compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_profile_picture"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/gray_500"
                            android:scaleType="centerCrop"
                            android:padding="1dp"
                            app:shapeAppearanceOverlay="@style/CircleImageStyle"
                            app:strokeColor="@color/emerald_700"
                            app:strokeWidth="1.5dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_full_name_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Md Sumon Ahmed"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:id="@+id/tv_email_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="tpgvla@premierhomes.com"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Form Fields as TextViews - Compact Spacing -->

                    <!-- Full Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="Md Sumon Ahmed"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_text_view"
                        android:layout_marginBottom="8dp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="tpgvla@premierhomes.com"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_text_view"
                        android:layout_marginBottom="8dp" />

                    <!-- Phone -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="+880 1XXXXXXXXX"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_text_view"
                        android:layout_marginBottom="8dp" />

                    <!-- Address -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_text_view"
                        android:layout_marginBottom="8dp" />

                    <!-- Bangla Notice TextView - Compact -->
                    <TextView
                        android:id="@+id/tv_bangla_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="আপনার ব্যক্তিগত তথ্য হালনাগাদের জন্য\n নিকটস্থ অফিসে যোগাযোগ করুন"
                        android:textSize="11sp"
                        android:textColor="#FF8C00"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="#FFF3E0"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:lineSpacingExtra="2dp" />

                    <!-- Delete Profile Button - Compact -->
                    <Button
                        android:id="@+id/btn_delete_profile"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="Delete Profile"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:backgroundTint="#DC3545"
                        android:textColor="#FFFFFF"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>