<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="70dp">

    <!-- Welcome Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back, Md!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/emerald_600"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here's what's happening with your properties today"
                android:textSize="14sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Stats Cards - Horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <!-- Total Price Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Money Icon - Top Right -->
                <ImageView
                    android:id="@+id/icon_total"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/money"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/card_color_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toStartOf="@id/icon_total"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price (Estimated)"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="৳4,220,000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payment Received Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginHorizontal="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/money"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/emerald_700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Received"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tv_payment_received"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="৳1,646,667"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Due Payment Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/money"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:tint="@color/red" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Payment"
                    android:textSize="18sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tv_due_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="৳2,566,664"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!-- Ongoing Projects Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing Projects"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore our latest developments"
                android:textSize="14sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAllHeader"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="View All"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/emerald_700"
            app:cornerRadius="18dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>


    <!-- RecyclerView for Projects -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        />


    <!-- Bottom Big Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewAllProjects"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="View All Projects >"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/emerald_700"
        app:cornerRadius="12dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>