<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_gradient_background"
    android:padding="0dp">

    <!-- Premium Header with Gradient -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_margin="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Decorative Element -->
            <View
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:background="@drawable/dialog_top_bar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <!-- Success Icon with Glow Effect -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <!-- Glow Effect -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icon_glow"
                    android:layout_gravity="center" />

                <!-- Icon Background -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_gradient"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:src="@drawable/ic_check_circle"
                        />
                </LinearLayout>
            </FrameLayout>

            <!-- Success Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Request Submitted!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1B2A3A"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.02"
                android:shadowColor="#1A000000"
                android:shadowRadius="3"
                android:shadowDx="0"
                android:shadowDy="1" />

            <!-- Divider with Gradient -->
            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="@drawable/divider_gradient"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Message Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F8F9FA"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Message Icon and Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_notification"
                            app:tint="#FF8C00"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF8C00"
                            android:letterSpacing="0.02" />
                    </LinearLayout>

                    <!-- Main Message -->
                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your request is submitted. We will delete your account soon and email you to know."
                        android:textSize="15sp"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="12dp" />

                    <!-- Email Icon Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#EDF2F7"
                        android:padding="12dp"
                        android:layout_marginTop="4dp"
                        android:radius="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_email"
                            android:tint="#4A5568"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check your email for updates"
                            android:textSize="12sp"
                            android:textColor="#4A5568"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- OK Button with Premium Style -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="GOT IT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_gradient"
                    android:letterSpacing="0.05"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="0dp" />
            </androidx.cardview.widget.CardView>

            <!-- Footer Decoration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Homes"
                    android:textSize="10sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginHorizontal="8dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>