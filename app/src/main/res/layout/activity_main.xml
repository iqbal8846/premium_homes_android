<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Logo Header (Default - Initially VISIBLE) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_premium_homes"
                        android:scaleType="centerCrop"
                        app:tint="@color/white"
                        android:contentDescription="Company Logo" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp">

                        <TextView
                            android:id="@+id/text_title"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THE PREMIUM HOMES LTD"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"/>

                        <TextView
                            android:id="@+id/text_slogan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YOUR DREAM HOME AWAITS"
                            android:textColor="@color/gray_100"
                            android:textSize="10sp"
                            android:letterSpacing="0.4"
                            android:layout_marginLeft="2dp"/>
                    </LinearLayout>

                    <!-- Menu Button for Normal Header -->
                    <ImageButton
                        android:id="@+id/menuButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_menu_24"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="Menu"
                        app:tint="@color/white"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dashboard Header (Initially GONE) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dashboardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="12dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/primaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <!-- Back Button to go Home -->
                    <ImageButton
                        android:id="@+id/btnDashboardBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="2dp"/>

                    <!-- Dashboard Title -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dashboard"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <!-- Menu Button for Dashboard Header -->
                    <ImageButton
                        android:id="@+id/btnDashboardMenu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_menu_24"
                        app:tint="@color/white"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fragment Container -->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Bottom App Bar -->
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            app:fabCradleMargin="6dp"
            app:fabCradleRoundedCornerRadius="24dp"
            app:fabCradleVerticalOffset="6dp"
            app:backgroundTint="@color/white"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"/>

        <!-- Main FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dashboard"
            app:backgroundTint="@color/emerald_700"
            app:tint="@android:color/white"
            app:layout_anchor="@id/bottomAppBar"
            app:shapeAppearanceOverlay="@style/fab_3_rounded"
            app:fabSize="normal"/>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_home32"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="center"
                app:tint="#808080"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nav_projects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_project2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="center"
                app:tint="#808080"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nav_favorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_profile32"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="center"
                app:tint="#808080"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_balb"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:scaleType="center"
                app:tint="#808080"/>
        </LinearLayout>

        <!-- Contact FABs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="90dp"
            android:gravity="center_horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/fab_3_rounded"
                android:backgroundTint="@color/red"
                android:src="@drawable/ic_email"
                app:tint="@android:color/white"
                android:layout_marginBottom="12dp"
                app:fabSize="mini"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#2962FF"
                app:shapeAppearanceOverlay="@style/fab_3_rounded"
                android:src="@drawable/ic_call"
                app:tint="@android:color/white"
                app:fabSize="mini"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearanceOverlay="@style/fab_3_rounded"
                android:backgroundTint="#25D366"
                android:src="@drawable/ic_whatsapp1"
                app:tint="@android:color/white"
                app:fabSize="mini"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Single Drawer Container (will switch content dynamically) -->
    <FrameLayout
        android:id="@+id/drawer_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <ProgressBar
        android:id="@+id/ProgressBar01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/primaryLight"
        android:layout_gravity="center"
        />


</FrameLayout>